CREATE VIEW Procesy_Czarka AS SELECT * FROM Processes WHERE user_id = 3;
CREATE VIEW Banned_users AS SELECT p.name, p.user_id, p.time FROM Processes p LEFT JOIN Banned_processes b ON p.name = b.name AND p.user_id = b.user_id;


START TRANSACTION;
  INSERT INTO Banned_processes(name, user_id, allowed_time) VALUES('skype', 4, -15);
ROLLBACK;


START TRANSACTION;
  CREATE TABLE Events (id INT NOT NULL AUTO_INCREMENT PRIMARY KEY, time TIMESTAMP, description VARCHAR(30));

  CREATE TRIGGER myTrig AFTER INSERT ON Banned_processes FOR EACH ROW INSERT INTO Events(description) VALUES('dodanie');

  INSERT INTO Banned_processes(name, user_id) VALUES('supertuxcart', 4);

COMMIT;
